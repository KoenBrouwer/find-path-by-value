{
  "compilerOptions": {
	"target": "es5",
	"module": "commonjs",
	"declaration": true,
	"outDir": "./dist",
	"strict": true,
	"sourceMap": true,
	"removeComments": true,
	"esModuleInterop": true,
	"forceConsistentCasingInFileNames": true,
	"noImplicitAny": false,
	"lib": ["dom", "es2019"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.*"]
}
